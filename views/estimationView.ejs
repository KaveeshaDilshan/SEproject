          <% if(est_project.length>0) {%>
          <div class="card card-primary card-outline">
            <div class="card-body table-responsive no-padding">
              <div class="card-header">
                <% if(est_project.length>0) {%>
                  <h3 class="box-title">Estimate ID:<%= est_project[0].e_id %></h3> 
                <% }%>
              </div>
              
              
              
              <table class="table table-bordered table-hover">
                <tbody><tr>
                  <th>Material</th>                  
                  <th>Size/Description</th>                  
                  <th>Quantity</th>
                  <th>Unit Cost</th>
                  <th>Cost</th>
                </tr>
                <% if (estimates.length > 0){ %>
                  <% let totalcost = 0 %>
                  <% estimates.forEach(estimate => { %>
                    <tr>
                      <td><%= estimate.m_name %></td>
                      <td><%= estimate.m_amount %></td>
                      <td><%= estimate.quantity %></td>
                      <td><%= estimate.m_cost %></td>
                      <td><%= estimate.quantity * estimate.m_cost %></td>
                    </tr>
                    <% totalcost += (estimate.quantity * estimate.m_cost)  %>
                  <% }) %>
                    <tr>
                      <td align="center" colspan="4"><b>Total cost</b></td>
                      <td><b><%= totalcost %></b></td>
                    </tr>
                <% } else { %>
                    <tr>
                      <td align="center" colspan="5">no records</td>
                    </tr>
                <% } %>
                </tbody>
